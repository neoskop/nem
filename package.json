{
  "name": "@neoskop/express-modules",
  "version": "0.0.0",
  "description": "Strucktured modules to build express apps",
  "main": "bundle/express-modules.bundle.js",
  "module": "dist/public_api.js",
  "jsnext:main": "dist/public_api.js",
  "typings": "dist/public_api.d.ts",
  "scripts": {
    "test:raw": "TS_NODE_CACHE=false mocha --require ts-node/register 'src/**.spec.ts'",
    "test:watch": "npm run test:raw -- --watch --watch-extension ts",
    "test:coverage": "rimraf coverage && nyc -e '.ts' -r html -r text npm run test:raw",
    "test": "npm run test:coverage && nyc report -r text-lcov | coveralls",
    "clean": "rimraf lib dist index.d.ts index.js index.js.map",
    "prebuild": "npm run test:coverage",
    "build": "npm run clean && npm run build:tsc && npm run build:rollup",
    "build:tsc": "tsc -p tsconfig.esm.json",
    "build:rollup": "rollup -c rollup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neoskop/express-modules.git"
  },
  "keywords": [
    "express",
    "modules",
    "di"
  ],
  "author": "Mark Wecke <mark.wecke@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neoskop/express-modules/issues"
  },
  "homepage": "https://github.com/neoskop/express-modules#readme",
  "devDependencies": {
    "@types/chai": "4.0.4",
    "@types/mocha": "2.2.43",
    "@types/node": "8.0.34",
    "chai": "4.1.2",
    "coveralls": "3.0.0",
    "mocha": "4.0.1",
    "nyc": "11.2.1",
    "rimraf": "2.6.2",
    "rollup": "0.50.0",
    "rollup-plugin-commonjs": "8.2.1",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "ts-node": "3.3.0",
    "tslib": "1.9.0",
    "typescript": "^2.6.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.ts",
      "dist",
      "bundle"
    ]
  },
  "dependencies": {
    "reflect-metadata": "0.1.12"
  }
}
